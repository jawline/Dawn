# Makefile for SimpleOS Kernel

SOURCES= $(patsubst %.s,%.o,$(wildcard *.s)) $(patsubst %.c,%.o,$(wildcard *.c)) $(patsubst %.c,%.o,$(wildcard ../lib/*.c)) $(patsubst %.c,%.o,$(wildcard ./drivers/*.c)) $(patsubst %.c,%.o,$(wildcard ./fs/*.c)) $(patsubst %.c,%.o,$(wildcard ./scheduler/*.c)) $(patsubst %.c,%.o,$(wildcard ./mm/*.c)) $(patsubst %.c,%.o,$(wildcard ./mm/*.s))

CC=gcc
CFLAGS=-nostdlib -nostdinc -fno-builtin -I ../Include -fno-stack-protector -m32
LDFLAGS=-Tlink.ld -melf_i386
ASFLAGS=-felf32

all: $(SOURCES) link

clean:
	-rm *.o ./fs/*.o ./drivers/*.o ../lib/*.o ./Build/Kernel

link:
	ld $(LDFLAGS) -o ./Build/Kernel $(SOURCES)

.s.o:
	nasm $(ASFLAGS) $<
